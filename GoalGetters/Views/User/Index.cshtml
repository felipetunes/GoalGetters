@model User

@{
    ViewData["Title"] = "Faça o Login";
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger" style="z-index:500">
        @TempData["Error"]
    </div>
}

<div class="d-flex justify-content-center align-items-center" style="min-height: 100vh; margin-top:-100px;">
    <div class="card text-white bgdetails w-25 p-4" style="min-width:300px">
        <div class="card-header text-center">
            <h2>Login</h2>
        </div>
        <div class="card-body">
            <form asp-action="Login" method="post">
                <div class="form-group">
                    <input asp-for="Username" class="form-control dark-mode color-white" style="border-radius:1rem !important" placeholder="Username" />
                    <span asp-validation-for="Username" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input asp-for="Password" class="form-control mt-3 dark-mode color-white" style="border-radius:1rem !important" placeholder="Password" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <button type="submit" value="Login" class="btn btn-block mt-3 mb-3 loginbutton border-button"><span>ENTRAR</span></button>
            </form>
        </div>
    </div>
</div>
