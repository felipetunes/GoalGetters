@model GoalGetters.Models.Live

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditLive" class="text-white">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Championship.Id" class="control-label"></label>
                <select asp-for="Championship.Id" asp-items="Html.GetEnumSelectList<GoalGetters.Helper.Enums.Championship>()" class="form-control"></select>
                <span asp-validation-for="Championship.Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateMatch" class="control-label"></label>
                <input asp-for="DateMatch" type="date" class="form-control" asp-format="{0:yyyy-MM-dd}" value="@DateTime.Today.ToString("yyyy-MM-dd")" />
                <span asp-validation-for="DateMatch" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Stadium" class="control-label"></label>
                <select asp-for="Championship.Id" asp-items="Html.GetEnumSelectList<GoalGetters.Helper.Enums.Stadium>().OrderBy(x => x.Text)" class="form-control"></select>
                <span asp-validation-for="Stadium" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HomeTeam.Name" class="control-label"></label>
                <select id="homeTeamSelect" asp-for="HomeTeam.Name" class="form-control">
                    <!-- As opções serão preenchidas aqui -->
                </select>
                <span asp-validation-for="HomeTeam.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="VisitingTeam.Name" class="control-label"></label>
                <select id="visitingTeamSelect" asp-for="VisitingTeam.Name" class="form-control">
                    <!-- As opções serão preenchidas aqui -->
                </select>
                <span asp-validation-for="VisitingTeam.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TeamPoints1" class="control-label"></label>
                <input asp-for="TeamPoints1" class="form-control" value="0" />
                <span asp-validation-for="TeamPoints1" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TeamPoints2" class="control-label"></label>
                <input asp-for="TeamPoints2" class="form-control" value="0"/>
                <span asp-validation-for="TeamPoints2" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

