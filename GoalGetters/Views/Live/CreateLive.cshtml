@model GoalGetters.Models.Live

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger" style="z-index:500">
        @TempData["Error"]
    </div>
}
@if (TempData["Success"] != null)
{
    <div class="alert alert-success" style="z-index:500">
        @TempData["Success"]
    </div>
}

<h5 class="text-white">Create</h5>

<h4 class="text-white">Live</h4>
<hr />
<div class="row">
    <div class="col-md-4 text-white bgdetails">
        <form asp-action="CreateLive">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Championship" class="control-label"></label>
                <select asp-for="Championship.Id" asp-items="Html.GetEnumSelectList<GoalGetters.Helper.Enums.Championship>()" class="form-control"></select>
                <span asp-validation-for="Championship.Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HomeTeam" class="control-label"></label>
                <select id="homeTeamSelect" asp-for="HomeTeam.Id" class="form-control">
                    <!-- As opções serão preenchidas aqui -->
                </select>
                <span asp-validation-for="HomeTeam.Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="VisitingTeam" class="control-label"></label>
                <select id="visitingTeamSelect" asp-for="VisitingTeam.Id" class="form-control">
                    <!-- As opções serão preenchidas aqui -->
                </select>
                <span asp-validation-for="VisitingTeam.Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateMatch" class="control-label"></label>
                <input asp-for="DateMatch" class="form-control" asp-format="{0:yyyy-MM-dd 00:00}" value="@DateTime.Today.ToString("yyyy-MM-dd 00:00")" />
                <span asp-validation-for="DateMatch" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Stadium" class="control-label"></label>
                <input asp-for="Stadium" class="form-control" />
                <span asp-validation-for="Stadium" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TeamPoints1" class="control-label"></label>
                <input asp-for="TeamPoints1" class="form-control" value="0" />
                <span asp-validation-for="TeamPoints1" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TeamPoints2" class="control-label"></label>
                <input asp-for="TeamPoints2" class="form-control" value="0" />
                <span asp-validation-for="TeamPoints2" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>
