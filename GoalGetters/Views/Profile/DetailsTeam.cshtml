@model GoalGetters.Models.Team

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Detalhes do Time";
}

<div class="m-4">
    <h4 class="text-white"> @Html.DisplayFor(model => model.Name)</h4>
    <div class="container text-white team-details">
        <div class="row">
            <div class="col">
                <img src="~/img/teams/@(Model.Name.ToLower().Replace(" ","")).png" alt="Logo do time" class="team-logo" />
            </div>
            <div class="col">
                @Html.DisplayNameFor(model => model.Id)
                @Html.DisplayFor(model => model.Id)
            </div>
            <div class="col">
                Local:
                @Html.DisplayFor(model => model.City) | @Html.DisplayFor(model => model.Country)
            </div>
        </div>
    </div>

   <div class="container text-white team-details mt-3">
       @Html.Partial("PlayerPartial", Model.Players)
   </div>

    <div class="mt-3">
        @Html.ActionLink("Editar", "EditTeam", new { entity = "Player", id = Model.Id }, new { @class = "btn btn-primary" })
        <a asp-action="Index" asp-route-searchName="@Context.Session.GetString("SearchName")" class="btn btn-secondary">Voltar à lista</a>
    </div>
</div>
