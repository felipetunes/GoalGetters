@model GoalGetters.Models.Team

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    ViewData["Title"] = "Detalhes do Time";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>DetailsTeam</title>
</head>
<body>
    <div class="m-4">
        <h4 class="text-white"> @Html.DisplayFor(model => model.Name)</h4>
        <div class="container text-white" style="background-color:rgba(105, 105, 105, 0.2); padding:30px; border-radius:10px; box-shadow: -1px 3px 31px 31px rgba(255,255,255,0.02);">
            <div class="row">
                <div class="col">
                    <img src="~/img/teams/@(Model.Name.ToLower().Replace(" ","")).png" alt="Logo" width="100px" height="100px" />
                </div>
                <div class="col">
                    @Html.DisplayNameFor(model => model.Id)
                    @Html.DisplayFor(model => model.Id)
                </div>
                <div class="col">
                    Local:
                    @Html.DisplayFor(model => model.City) | @Html.DisplayFor(model => model.Country)
                </div>
            </div>
        </div>

        <div class="mt-3" style="">
        @Html.ActionLink("Editar", "EditTeam", new { entity = "Player", id = Model.Id }, new { @class = "btn btn-primary" })
        <a asp-action="Index" asp-route-searchName="@Context.Session.GetString("SearchName")" class="btn btn-secondary">Voltar à lista</a>
        </div>
    </div>
</body>
</html>
