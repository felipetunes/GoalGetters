<script>

        // Primeiro, selecione todos os itens do menu
        var menuItems = document.querySelectorAll('.nav-pills .nav-link');

        // Em seguida, adicione um ouvinte de evento 'click' a cada item do menu
        menuItems.forEach(function (menuItem, index) {
            menuItem.addEventListener('click', function (event) {
                // Quando um item do menu é clicado, remova a classe 'active' de todos os itens do menu
                menuItems.forEach(function (item) {
                    item.classList.remove('active');
                });

                // Em seguida, adicione a classe 'active' ao item do menu que foi clicado
                event.currentTarget.classList.add('active');

                // Armazene o índice do item de menu ativo no armazenamento local
                localStorage.setItem('activeMenuItem', index);
            });
        });

        // Quando a página é carregada, verifique o armazenamento local para o item de menu ativo
        window.addEventListener('DOMContentLoaded', (event) => {
            var activeMenuItemIndex = localStorage.getItem('activeMenuItem');
            if (activeMenuItemIndex !== null && menuItems[activeMenuItemIndex] !== undefined) {
                menuItems[activeMenuItemIndex].classList.add('active');
            }
        });

        // Adicione um ouvinte de evento 'click' ao logo
        var logo = document.querySelector('.logoedit');
        logo.addEventListener('click', function (event) {
            // Quando o logo é clicado, remova a classe 'active' de todos os itens do menu
            menuItems.forEach(function (item) {
                item.classList.remove('active');
            });

            // Em seguida, adicione a classe 'active' ao primeiro item do menu (assumindo que 'home' é o primeiro item)
            if (menuItems[0] !== undefined) {
                menuItems[0].classList.add('active');
            }

            // Armazene o índice do item de menu ativo no armazenamento local
            localStorage.setItem('activeMenuItem', 0);
        });


</script>