@model GoalGetters.Models.User

@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h4 class="text-white">Registre-se</h4>
<hr />
<div class="row text-white bgdetails p-3" style="border-radius:1rem">
    <div class="col-md-4">
        <form asp-action="Register" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Username" class="control-label"></label>
                <input asp-for="Username" class="form-control dark-mode text-white" style="border-radius:1rem" placeholder="Username" />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" class="form-control dark-mode text-white" style="border-radius:1rem" placeholder="Password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Photo" class="control-label"></label>
                <input asp-for="Photo" type="file" class="form-control dark-mode text-white" style="border-radius:1rem" id="Photo">
                <span asp-validation-for="Photo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit" value="Create" class="btn btn-block mt-3 mb-3 loginbutton border-button"><span>Registrar</span></button>
            </div>
        </form>
    </div>
    <div class="col-md-4">
        <div style="width: 15.5rem; height: 15.5rem; margin:1.5rem;">
            <img id="userPhoto" src="#" alt="User Photo" style="display: none; max-width: 100%; max-height: 100%; border-radius:1rem" />
        </div>
    </div>
</div>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script>
    $(document).ready(function () {
        $("#Photo").change(function () {
            var reader = new FileReader();
            reader.onload = function (e) {
                $('#userPhoto').attr('src', e.target.result);
                $('#userPhoto').show();
            }
            reader.readAsDataURL(this.files[0]);
        });
    });
</script>